<%- include ("templates/header.ejs", {titulo: "Registro de Pacientes"}) %>

    <div class="container my-5" style="max-width: 400px;">
        <h2 class="text-center mb-4">Registrarme como Paciente</h2>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <form action="/registro" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Usuario</label>
                <input type="text" class="form-control" id="username" name="username" required>
                <small class="form-text text-muted">Será tu nombre de acceso.</small>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-success w-100">Registrarme</button>
            <a href="/login" class="btn btn-secondary w-100 mt-2">Ya tengo cuenta</a>
        </form>
    </div>

<%- include ("templates/flooter.ejs") %>