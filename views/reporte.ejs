<%- include("templates/header.ejs", {titulo: "Reporte General"}) %>

    <div class="container my-4">
        <h2>Reporte General de la Cl√≠nica</h2>
        <p class="text-muted">Vista completa de **TODAS** las colecciones de la base de datos (solo para administradores).</p>

        <h3 class="mt-5">Citas Programadas (Todas)</h3>
        <table class="table table-bordered table-sm">
            <thead>
                <tr class="table-info">
                    <th>Fecha y Hora</th>
                    <th>Doctor</th>
                    <th>Paciente</th>
                    <th>Estado de la Cita</th>
                </tr>
            </thead>
            <tbody>
                <% citasBD.forEach((cita) => { %>
                <tr>
                    <td><%= new Date(cita.date).toLocaleString('es-ES') %></td>
                    
                    <td><strong><%= cita.dentist %></strong></td>

                    <td>
                        <% if (cita.paciente) { %>
                            <strong><%= cita.paciente.firstName %></strong>
                            <br><small>ID: <%= cita.paciente._id %></small>
                        <% } else { %>
                            Paciente no asociado
                        <% } %>
                    </td>

                    <td>Programada</td>
                </tr>
                <% }) %>
                <% if (citasBD.length === 0) { %>
                    <tr><td colspan="4" class="text-center">No hay citas registradas.</td></tr>
                <% } %>
            </tbody>
        </table>

        </div>

